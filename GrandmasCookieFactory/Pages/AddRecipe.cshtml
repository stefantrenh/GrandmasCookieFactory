@page
@model GrandmasCookieFactory.Pages.AddRecipeModel
@{
}

<div class="container">
    <form method="post">
        <label for="name" class="form-label">Name: </label>
        <input type="text" id="name" class="form-control" asp-for="@Model.RecipeModel.Name" required />

        <label for="popularity" class="form-label">Popularity: </label>
        <input type="number" id="popularity" class="form-control" asp-for="@Model.RecipeModel.Popularity" required />

        <label for="ingredients" class="form-label">Ingredients: </label>
        <input type="text" class="form-control" id="ingredients" asp-for="@Model.IngredientsModel.Key" required>

        <label for="amount" class="form-label">Amount: </label>
        <input type="text" class="form-control" id="amount" asp-for="@Model.IngredientsModel.Value" required>

        <div class="form-group border p-2 m-2" v-for="(input,k) in inputs" :key="k">
            <label for="ingredients" class="form-label">Ingredient: </label>
            <input type="text" class="form-control" v-model="input.key">
            <label for="amount" class="form-label">Amount: </label>
            <input type="text" class="form-control" v-model="input.value">
            <i class="btn btn-danger mt-2" @@click="remove(k)" v-show="k || ( !k && inputs.length > 1)">Remove</i>
            <i class="btn-block btn-info" @@click="add(k)" v-show="k == inputs.length-1">Add fields</i>
        </div>

        <label for="description" class="form-label">Description: </label>
        <input type="text" id="description" class="form-control" asp-for="@Model.RecipeModel.Description" required />

        <button type="submit" class="btn btn-primary m-2">Submit</button>
    </form>
</div>



